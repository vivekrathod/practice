@model AzureDotNetWebAppDemo.ViewModels.ToDoItemViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>
@using (Html.BeginForm("Add", "ToDo"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ToDo</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.Description, new { @class = "form-control col-md-2" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Finished, new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.Finished, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Finished, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
}

